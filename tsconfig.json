{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src"  // Ensure rootDir only includes source files
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "tests"]
}
